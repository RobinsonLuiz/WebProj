{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "types": ["node"],
    "lib": ["es2015", "es2016", "es2017", "es2018"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["./**/*.ts", "./*.ts", "./**/*.js"],
  "exclude": ["node_modules"],
  "compileOnSave": true,
  "buildOnSave": true
}
